{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "rules": {
    "no-unused-vars": ["error", { "args": "none", "varsIgnorePattern": "^_" }],
    "no-undef": "off",
    "no-console": ["warn", { "allow": ["error", "warn"] }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [".next/", "node_modules/", "dist/"]
}
